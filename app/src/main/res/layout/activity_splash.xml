<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/futuristic_background">

    <!-- Network Status Indicator - Futuristic Style -->
    <LinearLayout
        android:id="@+id/layout_network_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp"
        android:background="@drawable/network_status_bg"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/icon_network_status"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/ic_online_indicator"
            android:contentDescription="@string/network_status" />

        <TextView
            android:id="@+id/text_network_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="@string/online"
            android:textSize="11sp"
            android:textColor="#4CAF50"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.05" />

    </LinearLayout>

    <!-- Main Content Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layout_new_wallet"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="32dp">

        <!-- Logo Container with Animation Layers -->
        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center">

            <!-- Outer Glow Effect -->
            <ImageView
                android:id="@+id/glow_outer"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:src="@drawable/glow_circle"
                android:alpha="0.7" />

            <!-- Outer Rotating Ring -->
            <ImageView
                android:id="@+id/ring_outer"
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:layout_gravity="center"
                android:src="@drawable/outer_ring_glow" />

            <!-- Inner Rotating Ring (Gold) -->
            <ImageView
                android:id="@+id/ring_inner"
                android:layout_width="260dp"
                android:layout_height="260dp"
                android:layout_gravity="center"
                android:src="@drawable/ring_gradient" />

            <!-- Main Logo -->
            <ImageView
                android:id="@+id/splash_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:contentDescription="@string/app_name" />

        </FrameLayout>

        <!-- Welcome Text with Glow -->
        <TextView
            android:id="@+id/text_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Welcome to RamaPay"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:fontFamily="sans-serif-light"
            android:letterSpacing="0.02"
            android:shadowColor="#806B2C91"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="20" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/text_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="A Decentralized Wallet"
            android:textSize="16sp"
            android:textColor="#B0B0B0"
            android:gravity="center"
            android:fontFamily="sans-serif"
            android:letterSpacing="0.1" />

        <!-- Powered By Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Powered by"
            android:textSize="13sp"
            android:textColor="#808080"
            android:gravity="center"
            android:letterSpacing="0.15" />

        <!-- Ramestta Network Text with Gradient -->
        <TextView
            android:id="@+id/text_ramestta_network"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Ramestta Network"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#D4AF37"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.08"
            android:shadowColor="#40D4AF37"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="15" />

        <TextView
            android:id="@+id/text_layer3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="A Layer 3 Blockchain for Scalability"
            android:textSize="12sp"
            android:textColor="#9090A0"
            android:gravity="center"
            android:letterSpacing="0.05" />

    </LinearLayout>

    <!-- Buttons Container - Futuristic Style -->
    <LinearLayout
        android:id="@+id/layout_new_wallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="48dp"
        android:orientation="vertical"
        android:visibility="visible"
        tools:visibility="visible">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_create"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="12dp"
            android:text="@string/create_a_new_wallet"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:letterSpacing="0.02"
            android:backgroundTint="#FFFFFF"
            app:cornerRadius="28dp"
            app:elevation="4dp"
            app:rippleColor="#40000000" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_import"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/i_already_have_a_wallet"
            android:textColor="#D4AF37"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:letterSpacing="0.02"
            app:icon="@mipmap/ic_launcher"
            app:iconGravity="start"
            app:iconPadding="8dp"
            app:iconSize="28dp"
            app:iconTint="@null"
            app:strokeColor="#D4AF37"
            app:strokeWidth="1.5dp"
            app:cornerRadius="28dp"
            app:rippleColor="#40D4AF37" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_watch"
            style="@style/Aw.Component.Button.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/mini_4"
            android:layout_weight="1.0"
            android:text="@string/watch"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Loading overlay for wallet creation -->
    <FrameLayout
        android:id="@+id/layout_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6000000"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="40dp"
            android:background="@drawable/loading_bg">

            <ProgressBar
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:indeterminate="true"
                android:indeterminateTint="#D4AF37" />

            <TextView
                android:id="@+id/text_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/creating_wallet"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.03" />

        </LinearLayout>

    </FrameLayout>

</RelativeLayout>
