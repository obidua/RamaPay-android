<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_simple_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/text_title"
                style="@style/Aw.Typography.Headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingStart="@dimen/base_24"
                android:paddingEnd="@dimen/base_24"
                android:text="@string/verify_seed_phrase"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/text_detail"
                style="@style/Aw.Typography"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/base_24"
                android:layout_marginTop="@dimen/small_12"
                android:layout_marginEnd="@dimen/base_24"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:textColor="?android:textColorSecondary"
                android:visibility="gone"
                tools:text="Complete the seed phrase by selecting the missing words"
                tools:visibility="visible" />

            <!-- All 12 Word Boxes Grid -->
            <GridLayout
                android:id="@+id/grid_all_words"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_12"
                android:layout_marginTop="@dimen/cozy_20"
                android:layout_marginEnd="@dimen/small_12"
                android:columnCount="4"
                android:rowCount="3"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="true">

                <!-- Row 1 -->
                <TextView
                    android:id="@+id/word_box_1"
                    style="@style/SeedWordBox"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="3dp"
                    tools:text="1# ****" />

                <TextView
                    android:id="@+id/word_box_2"
                    style="@style/SeedWordBox"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="3dp"
                    tools:text="2# ****" />

                <TextView
                    android:id="@+id/word_box_3"
                    style="@style/SeedWordBox"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="3dp"
                    tools:text="3# ****" />

                <TextView
                    android:id="@+id/word_box_4"
                    style="@style/SeedWordBox"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="3dp"
                    tools:text="4# ......" />

                <!-- Row 2 -->
                <TextView
                    android:id="@+id/word_box_5"
                    style="@style/SeedWordBox"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="3dp"
                    tools:text="5# ****" />

                <TextView
                    android:id="@+id/word_box_6"
                    style="@style/SeedWordBox"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="3dp"
                    tools:text="6# ****" />

                <TextView
                    android:id="@+id/word_box_7"
                    style="@style/SeedWordBox"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="3dp"
                    tools:text="7# ......" />

                <TextView
                    android:id="@+id/word_box_8"
                    style="@style/SeedWordBox"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="3dp"
                    tools:text="8# ****" />

                <!-- Row 3 -->
                <TextView
                    android:id="@+id/word_box_9"
                    style="@style/SeedWordBox"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="3dp"
                    tools:text="9# ......" />

                <TextView
                    android:id="@+id/word_box_10"
                    style="@style/SeedWordBox"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="3dp"
                    tools:text="10# ****" />

                <TextView
                    android:id="@+id/word_box_11"
                    style="@style/SeedWordBox"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="3dp"
                    tools:text="11# ****" />

                <TextView
                    android:id="@+id/word_box_12"
                    style="@style/SeedWordBox"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="3dp"
                    tools:text="12# ......" />

            </GridLayout>

            <!-- Hint text for tap to remove -->
            <TextView
                android:id="@+id/text_tap_hint"
                style="@style/Aw.Typography.Sub.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/tiny_8"
                android:text="@string/tap_word_to_remove"
                android:textColor="?android:textColorSecondary"
                android:visibility="gone" />

            <TextView
                style="@style/Aw.Typography.Caption"
                android:id="@+id/text_invalid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/small_12"
                android:layout_marginTop="@dimen/tiny_8"
                android:padding="@dimen/tiny_8"
                android:text="@string/invalid_phrase"
                android:textColor="?colorError"
                android:visibility="invisible"
                tools:visibility="visible" />

            <!-- Divider line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/base_24"
                android:layout_marginTop="@dimen/cozy_20"
                android:layout_marginEnd="@dimen/base_24"
                android:background="?colorSurfaceQuaternary" />

            <!-- Section title for word selection -->
            <TextView
                android:id="@+id/text_select_words"
                style="@style/Aw.Typography.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/standard_16"
                android:text="@string/select_words_below"
                android:textColor="?android:textColorSecondary" />

            <!-- Word selection area (only 4 words) -->
            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/layout_word_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/base_24"
                android:layout_marginTop="@dimen/standard_16"
                android:layout_marginEnd="@dimen/base_24"
                android:layout_marginBottom="@dimen/cozy_20"
                android:gravity="center"
                app:flexDirection="row"
                app:flexWrap="wrap"
                app:justifyContent="center" />

            <!-- Hidden views for compatibility -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardBackgroundColor="@color/transparent"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/text_verify"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone" />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

    <com.alphawallet.app.widget.FunctionButtonBar
        android:id="@+id/layoutButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
