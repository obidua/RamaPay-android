<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/standard_16">

    <com.alphawallet.app.widget.BottomSheetHandleView
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content" />

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/my_wallet_address"
        android:textColor="?android:textColorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/tiny_8"
        android:layout_marginBottom="@dimen/standard_16"
        android:gravity="center" />

    <!-- Copy Wallet Address -->
    <LinearLayout
        android:id="@+id/copy_wallet_address_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/small_12"
        android:layout_marginBottom="@dimen/tiny_8"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_copy"
            app:tint="?colorPrimary" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/small_12">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/copy_wallet_address"
                android:textColor="?android:textColorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/copy_wallet_address_desc"
                android:textColor="?android:textColorSecondary"
                android:textSize="12sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/info_copy_wallet_address"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_help"
            android:padding="@dimen/tiny_8"
            android:background="?selectableItemBackgroundBorderless"
            app:tint="@color/dove" />

    </LinearLayout>

    <!-- Show My Wallet Address -->
    <LinearLayout
        android:id="@+id/show_my_wallet_address_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/small_12"
        android:layout_marginBottom="@dimen/tiny_8"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_qr_rounded_white"
            app:tint="?colorPrimary" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/small_12">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_show_wallet_address"
                android:textColor="?android:textColorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_my_wallet_address_desc"
                android:textColor="?android:textColorSecondary"
                android:textSize="12sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/info_show_my_wallet_address"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_help"
            android:padding="@dimen/tiny_8"
            android:background="?selectableItemBackgroundBorderless"
            app:tint="@color/dove" />

    </LinearLayout>

    <!-- Add / Hide Tokens -->
    <LinearLayout
        android:id="@+id/add_hide_tokens_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/small_12"
        android:layout_marginBottom="@dimen/tiny_8"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_add_circle"
            app:tint="?colorPrimary" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/small_12">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_hide_tokens"
                android:textColor="?android:textColorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_hide_tokens_desc"
                android:textColor="?android:textColorSecondary"
                android:textSize="12sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/info_add_hide_tokens"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_help"
            android:padding="@dimen/tiny_8"
            android:background="?selectableItemBackgroundBorderless"
            app:tint="@color/dove" />

    </LinearLayout>

    <!-- Rename This Wallet -->
    <LinearLayout
        android:id="@+id/rename_this_wallet_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/small_12"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_edit"
            app:tint="?colorPrimary" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/small_12">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rename_this_wallet_action"
                android:textColor="?android:textColorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rename_this_wallet_desc"
                android:textColor="?android:textColorSecondary"
                android:textSize="12sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/info_rename_this_wallet"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_help"
            android:padding="@dimen/tiny_8"
            android:background="?selectableItemBackgroundBorderless"
            app:tint="@color/dove" />

    </LinearLayout>

</LinearLayout>


