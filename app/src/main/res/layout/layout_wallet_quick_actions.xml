<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="@dimen/standard_16"
    android:paddingEnd="@dimen/standard_16"
    android:paddingTop="@dimen/small_12"
    android:paddingBottom="@dimen/small_12">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/action_buy"
        android:layout_width="0dp"
        android:layout_height="92dp"
        android:layout_marginEnd="@dimen/tiny_8"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@color/action_button_background"
        app:cardCornerRadius="@dimen/standard_16"
        app:cardElevation="2dp"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/tiny_8">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginBottom="@dimen/tiny_8"
                android:contentDescription="@string/wallet_action_buy"
                android:src="@drawable/ic_action_buy"
                app:tint="@color/action_button_icon" />

            <TextView
                style="@style/Aw.Typography.Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wallet_action_buy"
                android:textColor="@color/action_button_text"
                android:textSize="13sp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/action_swap"
        android:layout_width="0dp"
        android:layout_height="92dp"
        android:layout_marginEnd="@dimen/tiny_8"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@color/action_button_background"
        app:cardCornerRadius="@dimen/standard_16"
        app:cardElevation="2dp"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/tiny_8">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginBottom="@dimen/tiny_8"
                android:contentDescription="@string/swap"
                android:src="@drawable/ic_action_swap"
                app:tint="@color/action_button_icon" />

            <TextView
                style="@style/Aw.Typography.Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/swap"
                android:textColor="@color/action_button_text"
                android:textSize="13sp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/action_send"
        android:layout_width="0dp"
        android:layout_height="92dp"
        android:layout_marginEnd="@dimen/tiny_8"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@color/action_button_background"
        app:cardCornerRadius="@dimen/standard_16"
        app:cardElevation="2dp"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/tiny_8">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginBottom="@dimen/tiny_8"
                android:contentDescription="@string/action_send"
                android:src="@drawable/ic_action_send"
                app:tint="@color/action_button_icon" />

            <TextView
                style="@style/Aw.Typography.Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_send"
                android:textColor="@color/action_button_text"
                android:textSize="13sp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/action_receive"
        android:layout_width="0dp"
        android:layout_height="92dp"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@color/action_button_background"
        app:cardCornerRadius="@dimen/standard_16"
        app:cardElevation="2dp"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/tiny_8">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginBottom="@dimen/tiny_8"
                android:contentDescription="@string/action_receive"
                android:src="@drawable/ic_action_receive"
                app:tint="@color/action_button_icon" />

            <TextView
                style="@style/Aw.Typography.Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_receive"
                android:textColor="@color/action_button_text"
                android:textSize="13sp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
