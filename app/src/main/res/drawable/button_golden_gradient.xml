<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Main gradient background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#FFD700"
                android:centerColor="#D4AF37"
                android:endColor="#6B2C91"
                android:type="linear" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    
    <!-- Glass effect overlay with semi-transparent white -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="20dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#40FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    
    <!-- Subtle border for depth -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#80FFFFFF" />
            <corners android:radius="24dp" />
        </shape>
    </item>
</layer-list>
