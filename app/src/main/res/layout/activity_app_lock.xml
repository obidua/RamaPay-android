<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/base_24">

    <!-- App Logo -->
    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ramapay_wallet_logo" />

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        style="@style/Aw.Typography.Title.Large.SemiBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_24"
        android:text="@string/unlock_ramapay"
        android:textColor="?android:textColorPrimary" />

    <!-- Password Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large_32"
        android:hint="@string/enter_password"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="?android:textColorSecondary"
        app:boxStrokeColor="@color/selector_text_input_box_stroke"
        app:boxStrokeWidth="1.5dp"
        app:boxStrokeWidthFocused="2dp"
        app:hintTextColor="?android:textColorSecondary">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="?android:textColorPrimary"
            android:textColorHint="?android:textColorSecondary" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Unlock Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_unlock"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="@dimen/base_24"
        android:text="@string/unlock"
        android:textAllCaps="false"
        android:textColor="@color/mine"
        app:backgroundTint="?colorPrimary"
        app:cornerRadius="28dp" />

    <!-- Biometric Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_biometric"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="@dimen/standard_16"
        android:text="@string/use_biometric"
        android:textAllCaps="false"
        android:textColor="?colorPrimary"
        app:icon="@drawable/ic_fingerprint"
        app:iconGravity="textStart"
        app:iconTint="?colorPrimary"
        app:strokeColor="?colorPrimary"
        app:cornerRadius="28dp" />

</LinearLayout>
