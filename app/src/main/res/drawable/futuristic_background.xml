<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base dark gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#0D0D1A"
                android:centerColor="#1A1A2E"
                android:endColor="#16213E" />
        </shape>
    </item>
    <!-- Subtle purple accent at top -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="400dp"
                android:centerX="0.5"
                android:centerY="0"
                android:startColor="#306B2C91"
                android:endColor="#00000000" />
        </shape>
    </item>
    <!-- Subtle gold accent at bottom -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="400dp"
                android:centerX="0.5"
                android:centerY="1"
                android:startColor="#20D4AF37"
                android:endColor="#00000000" />
        </shape>
    </item>
</layer-list>
