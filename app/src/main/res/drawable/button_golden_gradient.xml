<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Black border outline -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000000" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    
    <!-- Main gradient background with inset to show border -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#B8860B"
                android:centerColor="#996515"
                android:endColor="#6B2C91"
                android:type="linear" />
            <corners android:radius="22dp" />
        </shape>
    </item>
    
    <!-- Glass effect overlay with semi-transparent white -->
    <item android:top="3dp" android:left="3dp" android:right="3dp" android:bottom="22dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#40FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
            <corners android:radius="21dp" />
        </shape>
    </item>
</layer-list>
