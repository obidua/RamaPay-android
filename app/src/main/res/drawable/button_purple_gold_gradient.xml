<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Black border background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000000" />
            <corners android:radius="99dp" />
        </shape>
    </item>
    
    <!-- Main gradient background (80% purple, 20% gold) inset to show border -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#6B2C91"
                android:centerColor="#8B4FA8"
                android:endColor="#D4AF37"
                android:type="linear" />
            <corners android:radius="97dp" />
        </shape>
    </item>
    
    <!-- Glass effect overlay with semi-transparent white -->
    <item android:top="3dp" android:left="3dp" android:right="3dp" android:bottom="21dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#30FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
            <corners android:radius="96dp" />
        </shape>
    </item>
</layer-list>
