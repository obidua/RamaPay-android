<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state - use primary color (azure blue) -->
    <item android:state_focused="true" android:color="@color/azure" />
    <!-- Error state -->
    <item android:state_enabled="true" android:state_activated="false" android:color="@color/danger" />
    <!-- Default/unfocused state - use a visible gray outline -->
    <item android:color="@color/silver" />
</selector>
